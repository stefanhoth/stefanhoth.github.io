---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Stefan Hoth | Engineering Leader",
  description = "Stefan builds successful and happy engineering teams with a focus on psychological safety and developer productivity",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Engineering Manager, Engineering Leader, Director of Engineering, Software Engineering" />
    <meta name="author" content="Stefan Hoth" />
    <title>{title}</title>
    <link rel="canonical" href="https://stefanhoth.com" />
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/feed.xml" />

    <!-- Favicons -->
    <link rel="shortcut icon" href="/img/favs/favicon.ico" />
    <link rel="icon" sizes="16x16 32x32 64x64" href="/img/favs/favicon.ico" />
    <link rel="icon" type="image/png" sizes="196x196" href="/img/favs/favicon-192.png" />
    <link rel="icon" type="image/png" sizes="160x160" href="/img/favs/favicon-160.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/img/favs/favicon-96.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/img/favs/favicon-64.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favs/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favs/favicon-16.png" />
    <link rel="apple-touch-icon" href="/img/favs/favicon-57.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/img/favs/favicon-114.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/img/favs/favicon-72.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/img/favs/favicon-144.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/img/favs/favicon-60.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/img/favs/favicon-120.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/img/favs/favicon-76.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/img/favs/favicon-152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favs/favicon-180.png" />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/img/favs/favicon-144.png" />
    <meta name="msapplication-config" content="/img/favs/browserconfig.xml" />
  </head>
  <body>
    <style is:global>
      :root {
        --bg: #fafafa;
        --text: #111;
        --accent: #0d6efd;
        --card-bg: white;
        --border: #e5e7eb;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg: #111;
          --text: #fafafa;
          --card-bg: #1f2937;
          --border: #374151;
        }
      }

      * {
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        margin: 0;
        padding: 2rem 1rem;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        max-width: 600px;
        margin-inline: auto;
      }

      .profile {
        text-align: center;
        margin-bottom: 3rem;
      }

      .photo {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--accent);
        margin-bottom: 1rem;
        box-shadow: var(--shadow);
      }

      h1 {
        font-size: 2.5rem;
        margin: 0 0 0.5rem;
        font-weight: 700;
      }

      .tagline {
        font-size: 1.1rem;
        color: #666;
        margin: 0 0 2rem;
      }

      @media (prefers-color-scheme: dark) {
        .tagline {
          color: #9ca3af;
        }
      }

      .job-hunt {
        background: linear-gradient(135deg, var(--accent), #0ea5e9);
        color: white;
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow);
      }

      .job-hunt strong {
        display: block;
        margin-top: 0.5rem;
      }

      .about {
        margin-bottom: 2rem;
      }

      .about p {
        margin-bottom: 1rem;
      }

      .quote {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
      }

      .quote::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, 
          rgba(173, 216, 230, 0.1) 0%,
          rgba(255, 228, 196, 0.1) 50%,
          rgba(255, 192, 203, 0.1) 100%);
        z-index: 0;
      }

      .quote blockquote {
        position: relative;
        z-index: 1;
        margin: 0 0 1rem 0;
        font-size: 1.25rem;
        font-weight: 600;
        line-height: 1.5;
        color: var(--text);
        font-style: normal;
      }

      .quote cite {
        position: relative;
        z-index: 1;
        display: block;
        font-size: 0.9rem;
        color: #d97706;
        font-style: normal;
        text-align: center;
      }

      @media (prefers-color-scheme: dark) {
        .quote cite {
          color: #fbbf24;
        }
      }

      .links {
        display: grid;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .link {
        display: block;
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 12px;
        text-decoration: none;
        color: var(--text);
        font-weight: 500;
        border: 1px solid var(--border);
        transition: all 0.2s;
        box-shadow: var(--shadow);
      }

      .link:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        border-color: var(--accent);
        color: var(--accent);
      }

      .link strong {
        display: block;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
      }

      form {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
      }

      input,
      textarea {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--bg);
        color: var(--text);
        font-family: inherit;
        font-size: 1rem;
      }

      input:focus,
      textarea:focus {
        outline: none;
        border-color: var(--accent);
      }

      button {
        background: var(--accent);
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        transition: background 0.2s;
        font-size: 1rem;
      }

      button:hover {
        background: #0b5ed7;
      }

      .hidden {
        position: absolute;
        left: -9999px;
        width: 1px;
        height: 1px;
        overflow: hidden;
      }

      @media (max-width: 640px) {
        body {
          padding: 1rem;
        }

        h1 {
          font-size: 2rem;
        }

        .job-hunt {
          font-size: 1rem;
          padding: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

